
<body align ="center">
  <h1>Blogs</h1>
  <%= link_to 'New article', new_article_path %>
<table align ="center">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Do you want to delete this blog?' } %></td>
    </tr>
  <% end %>
</table>
</body>